{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "isolatedModules": true,
      "types": ["node", "vite/client"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
    },
    "include": [
      "src",
      "vite.config.ts"
    ],
    "exclude": ["node_modules"]
  }